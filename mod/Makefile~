
export ARCH=arm
export CROSS_COMPILE=/opt/acr890/toolchain/bin/arm-arago-linux-gnueabi-

AR=$(CROSS_COMPILE)ar
LD=$(CROSS_COMPILE)ld
CC=$(CROSS_COMPILE)gcc


DEBFLAGS=-02

PWD := $(shell pwd)
src:=src

obj-m := tda8026.o
tda8026-objs := ifd.o

KERNELDIR?=/opt/280/linux/kernel/

modules:
	$(MAKE) -C $(KERNELDIR) M=$(PWD)
	@echo 'Module ifd_ICC.ko was already generated'

clean:
	rm -rf $(srcdir)*.o $(srcdir)*.mod.o $(srcdir)*.ko $(srcdir)*.mod.c \
	*.o *.mod.o *.ko *.mod.c *.symvers *.order .*.*.cmd .tmp_versions
